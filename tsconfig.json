{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"outDir": "./library/",
		"removeComments": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true
